<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parish Officer Dashboard</title>
    <link href="/styles/output.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="p-6 w-64 text-white bg-blue-800">
            <h2 class="mb-6 text-2xl font-semibold">Admin Panel</h2>
            <nav>
                <ul>
                    <li class="mb-4">
                        <a href="/parish/dashboard" class="block px-4 py-2 bg-blue-900 rounded">Dashboard</a>
                    </li>
                    <li class="mb-4">
                        <a href="/parish/sunday-classes" class="block px-4 py-2 rounded hover:bg-blue-700">Manage Sunday Classes</a>
                    </li>
                    <li class="mb-4">
                        <a href="/auth/logout" class="block px-4 py-2 rounded hover:bg-blue-700">Logout</a>
                    </li>
                </ul>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-10">
            <h1 class="mb-6 text-3xl font-bold">Parish Officer Dashboard</h1>
            
            <div class="mb-8">
                <h2 class="mb-4 text-xl font-semibold">Sunday Classes in Your Parish</h2>
                
                <div class="overflow-hidden bg-white rounded-lg shadow">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">ID</th>
                                <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Name</th>
                                <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Number of Students</th>
                                <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% if (sundayClasses && sundayClasses.length > 0) { %>
                                <% sundayClasses.forEach(sundayClass => { %>
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap"><%= sundayClass.id %></td>
                                        <td class="px-6 py-4 whitespace-nowrap"><%= sundayClass.name %></td>
                                        <td class="px-6 py-4 whitespace-nowrap"><%= sundayClass.studentCount || 0 %></td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <a href="/parish/sunday-classes/<%= sundayClass.id %>" class="mr-3 text-blue-600 hover:text-blue-900">View</a>
                                            <a href="/parish/sunday-classes/<%= sundayClass.id %>/edit" class="mr-3 text-yellow-600 hover:text-yellow-900">Edit</a>
                                            <a href="/parish/sunday-classes/<%= sundayClass.id %>/delete" class="text-red-600 hover:text-red-900">Delete</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="px-6 py-4 text-center">No Sunday Classes found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="mt-6">
                <h2 class="mb-4 text-xl font-semibold">Add New Sunday Class</h2>
                <form action="/parish/sunday-classes/add" method="POST" class="p-6 bg-white rounded-lg shadow">
                    <div class="mb-4">
                        <label for="name" class="block mb-2 text-sm font-bold text-gray-700">Sunday Class Name</label>
                        <input type="text" id="name" name="name" class="px-3 py-2 w-full leading-tight text-gray-700 rounded border shadow appearance-none focus:outline-none focus:shadow-outline" required>
                    </div>
                    <button type="submit" class="px-4 py-2 font-bold text-white bg-blue-500 rounded hover:bg-blue-700 focus:outline-none focus:shadow-outline">
                        Add Sunday Class
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
