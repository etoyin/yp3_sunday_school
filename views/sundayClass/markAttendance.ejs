<!DOCTYPE html>
<html>
<head>
    <title>Mark Attendance - <%= sundayClass.name %></title>
    <link rel="stylesheet" href="/styles/output.css">
</head>
<body class="bg-gray-100">
    <%- include('../partials/_navbar') %>

    <div class="container px-4 py-8 mx-auto">
        <h1 class="mb-6 text-3xl font-bold text-gray-800"><%= sundayClass.name %> - Mark Attendance</h1>
        <p class="mb-4 text-lg text-gray-600">Date: <%= currentDate %></p>

        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <!-- Absent Students -->
            <div class="p-6 bg-white rounded-lg shadow">
                <h2 class="mb-4 text-xl font-semibold text-red-600">Absent Students</h2>
                <div class="space-y-2" id="absentList">
                    <% absentStudents.forEach(student => { %>
                        <form action="/student-attendance/mark" method="POST" class="inline-block w-full">
                            <input type="hidden" name="studentId" value="<%= student.id %>">
                            <input type="hidden" name="date" value="<%= currentDate %>">
                            <input type="hidden" name="status" value="present">
                            <input type="hidden" name="sundayClassId" value="<%= sundayClass.id %>">
                            <button type="submit" 
                                class="w-full px-4 py-2 text-white transition duration-150 ease-in-out bg-red-500 rounded hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50"
                                data-student-id="<%= student.id %>">
                                <%= student.firstName %> <%= student.lastName %>
                            </button>
                        </form>
                    <% }); %>
                </div>
            </div>

            <!-- Present Students -->
            <div class="p-6 bg-white rounded-lg shadow">
                <h2 class="mb-4 text-xl font-semibold text-green-600">Present Students</h2>
                <div class="space-y-2" id="presentList">
                    <% presentStudents.forEach(student => { %>
                        <form action="/student-attendance/mark" method="POST" class="inline-block w-full">
                            <input type="hidden" name="studentId" value="<%= student.id %>">
                            <input type="hidden" name="date" value="<%= currentDate %>">
                            <input type="hidden" name="status" value="absent">
                            <input type="hidden" name="sundayClassId" value="<%= sundayClass.id %>">
                            <button type="submit" 
                                class="w-full px-4 py-2 text-white transition duration-150 ease-in-out bg-green-500 rounded hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50"
                                data-student-id="<%= student.id %>">
                                <%= student.firstName %> <%= student.lastName %>
                            </button>
                        </form>
                    <% }); %>
                </div>
            </div>
        </div>

        <div class="flex justify-end mt-6">
            <a href="/sunday-classes/<%= sundayClass.id %>" 
                class="px-4 py-2 font-medium text-white transition duration-150 ease-in-out bg-blue-500 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                Back to Class View
            </a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get the lists
            const absentList = document.getElementById('absentList');
            const presentList = document.getElementById('presentList');

            // Add event listeners to all forms
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Get the form data
                    const formData = new FormData(form);
                    
                    // Create an object from the form data
                    const data = {};
                    formData.forEach((value, key) => {
                        data[key] = value;
                    });
                    
                    // Send the form data to the server using fetch
                    fetch('/student-attendance/mark', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        body: JSON.stringify(data)
                    })
                    .then(response => {
                        if (response.ok) {
                            // Move the button to the other list
                            const button = form.querySelector('button');
                            const studentId = button.getAttribute('data-student-id');
                            const currentStatus = formData.get('status');
                            
                            // Get the status input field
                            const statusInput = form.querySelector('input[name="status"]');
                            
                            // Update the form to toggle the status
                            const newStatus = currentStatus === 'present' ? 'absent' : 'present';
                            statusInput.value = newStatus;
                            
                            // Update the button appearance and move to the appropriate list
                            if (currentStatus === 'present') {
                                // Student was marked as present, now mark as absent
                                button.classList.remove('bg-green-500', 'hover:bg-green-600');
                                button.classList.add('bg-red-500', 'hover:bg-red-600');
                                absentList.appendChild(form);
                            } else {
                                // Student was marked as absent, now mark as present
                                button.classList.remove('bg-red-500', 'hover:bg-red-600');
                                button.classList.add('bg-green-500', 'hover:bg-green-600');
                                presentList.appendChild(form);
                            }
                        } else {
                            console.error('Error updating attendance');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
                });
            });
        });
    </script>
</body>
</html>
